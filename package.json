{
    "name": "manual-screeps",
    "version": "0.1.1",
    "description": "manual-screeps",
    "main": "index.js",
    "//": "If you add or change the names of destinations in screeps.json, make sure you update these scripts to reflect the changes",
    "scripts": {
        "lint": "eslint \"src/**/*.ts\"",
        "build": "rollup -c & npx typedoc src",
        "push-main": "rollup -c --environment DEST:main",
        "push-pserver": "rollup -c --environment DEST:pserver",
        "push-season": "rollup -c --environment DEST:season",
        "push-sim": "rollup -c --environment DEST:sim",
        "test": "npm run test-unit",
        "test-unit": "mocha test/unit/**/*.ts",
        "test-integration": "echo 'See docs/in-depth/testing.md for instructions on enabling integration tests'",
        "watch-main": "rollup -cw --environment DEST:main",
        "watch-pserver": "rollup -cw --environment DEST:pserver",
        "watch-season": "rollup -cw --environment DEST:season",
        "watch-sim": "rollup -cw --environment DEST:sim"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Ureimu/manual-screeps.git"
    },
    "author": "Ureium",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/Ureimu/manual-screeps/issues"
    },
    "homepage": "https://github.com/Ureimu/manual-screeps#readme",
    "engines": {
        "node": "10.x || 12.x"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@types/chai": "^4.2.18",
        "@types/lodash": "4.14.168",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.2",
        "@types/screeps": "^3.2.2",
        "@types/sinon": "^10.0.0",
        "@types/sinon-chai": "^3.2.5",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "@typescript-eslint/typescript-estree": "^4.22.1",
        "chai": "^4.3.4",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.4.0",
        "lodash": "^4.17.21",
        "mocha": "^8.4.0",
        "prettier": "^2.2.1",
        "rollup": "^2.47.0",
        "rollup-plugin-clear": "^2.0.7",
        "rollup-plugin-screeps": "^1.0.1",
        "rollup-plugin-typescript2": "^0.30.0",
        "sinon": "^10.0.0",
        "sinon-chai": "^3.6.0",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "prettier": "^2.2.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-cpy": "^2.0.1",
        "rollup-plugin-html": "^0.2.1",
        "source-map": "~0.7.3",
        "typedoc": "^0.20.36"
    }
}
